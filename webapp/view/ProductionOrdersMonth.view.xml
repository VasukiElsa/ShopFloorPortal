<mvc:View controllerName="Shoor_Floor.controller.ProductionOrdersMonth" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<HBox>
			<Label text="Select Month:" class="sapUiSmallMarginEnd"/>
			<Select id="monthSelect" width="120px" change="onMonthSubmit">
				<items>
					<core:Item key="01" text="January"/>
					<core:Item key="02" text="February"/>
					<core:Item key="03" text="March"/>
					<core:Item key="04" text="April"/>
					<core:Item key="05" text="May"/>
					<core:Item key="06" text="June"/>
					<core:Item key="07" text="July"/>
					<core:Item key="08" text="August"/>
					<core:Item key="09" text="September"/>
					<core:Item key="10" text="October"/>
					<core:Item key="11" text="November"/>
					<core:Item key="12" text="December"/>
				</items>
			</Select>
		</HBox>
		<Table id="productionMonthTable" inset="false" items="{ path: '/production_orderSet' }">
			<columns>
				<Column><Text text="Order ID"/></Column>
				<Column><Text text="Material"/></Column>
				<Column><Text text="Plant"/></Column>
				<Column><Text text="Quantity"/></Column>
				<Column><Text text="Unit"/></Column>
				<Column><Text text="Order Date"/></Column>
				<Column><Text text="Production Month"/></Column>
				<Column><Text text="Production Year"/></Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{path:'Orderid', formatter: '.formatNA'}"/>
						<Text text="{path:'Material', formatter: '.formatNA'}"/>
						<Text text="{path:'Plant', formatter: '.formatNA'}"/>
						<Text text="{path:'Quantity', formatter: '.formatNA'}"/>
						<Text text="{path:'Unit', formatter: '.formatNA'}"/>
						<Text text="{path:'Orderdate', formatter: '.Formatter.formatDate'}"/>
						<Text text="{path:'ProductionMonth', formatter: '.formatNA'}"/>
						<Text text="{path:'ProductionYear', formatter: '.formatNA'}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</VBox>
</mvc:View>