<mvc:View controllerName="Shoor_Floor.controller.PlannedOrdersMonth"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <VBox class="sapUiSmallMargin">
        <HBox>
            <Label text="Select Month:" class="sapUiSmallMarginEnd"/>
            <Select id="plannedMonthSelect" width="120px" change="onMonthSubmit">
                <items>
                    <core:Item key="01" text="January"/>
                    <core:Item key="02" text="February"/>
                    <core:Item key="03" text="March"/>
                    <core:Item key="04" text="April"/>
                    <core:Item key="05" text="May"/>
                    <core:Item key="06" text="June"/>
                    <core:Item key="07" text="July"/>
                    <core:Item key="08" text="August"/>
                    <core:Item key="09" text="September"/>
                    <core:Item key="10" text="October"/>
                    <core:Item key="11" text="November"/>
                    <core:Item key="12" text="December"/>
                </items>
            </Select>
        </HBox>

        <Table id="plannedMonthTable" inset="false" items="{ path: '/Plan_OrderSet' }">
            <columns>
                <Column><Text text="Planned Order ID"/></Column>
                <Column><Text text="Material"/></Column>
                <Column><Text text="Plant"/></Column>
                <Column><Text text="Quantity"/></Column>
                <Column><Text text="Unit"/></Column>
                <Column><Text text="Planned Date"/></Column>
                <Column><Text text="Planned Month"/></Column>
                <Column><Text text="Planned Year"/></Column>
            </columns>

            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{path:'PlanOrderId', formatter: '.Formatter.defaultNA'}"/>
                        <Text text="{path:'MaterialNo', formatter: '.Formatter.defaultNA'}"/>
                        <Text text="{path:'PlantNo', formatter: '.Formatter.defaultNA'}"/>
                        <Text text="{path:'Quantity', formatter: '.Formatter.defaultNA'}"/>
                        <Text text="{path:'Unit', formatter: '.Formatter.defaultNA'}"/>
                        <Text text="{path:'PlannedDate', formatter: '.Formatter.formatDate'}"/>
                        <Text text="{path:'PlannedMonth', formatter: '.Formatter.defaultNA'}"/>
                        <Text text="{path:'PlannedYear', formatter: '.Formatter.defaultNA'}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</mvc:View>
